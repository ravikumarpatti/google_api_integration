<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Code Suggestion System</title>
    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: Arial, sans-serif; padding: 20px; background: #f5f5f5; }
        .container { max-width: 800px; margin: 0 auto; background: white; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); margin-bottom: 20px; }
        .container.full-width { max-width: 100%; }
        h1 { color: #333; margin-bottom: 20px; }
        h2 { color: #555; font-size: 18px; margin-bottom: 15px; border-bottom: 2px solid #4CAF50; padding-bottom: 5px; }
        input, textarea, button { width: 100%; padding: 10px; margin: 8px 0; border: 1px solid #ddd; border-radius: 4px; font-size: 14px; }
        .button-group { display: flex; gap: 10px; }
        .button-group button { width: auto; flex: 1; }
        button { background: #4CAF50; color: white; border: none; cursor: pointer; font-weight: bold; }
        button:hover { background: #45a049; }
        button:disabled { background: #ccc; cursor: not-allowed; }
        .split-container { display: flex; gap: 20px; margin-top: 20px; }
        .split-panel { flex: 1; min-height: 200px; }
        .status { padding: 10px; border-radius: 4px; margin: 10px 0; }
        .success { background: #d4edda; color: #155724; border: 1px solid #c3e6cb; }
        .error { background: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; }
        .info { background: #d1ecf1; color: #0c5460; border: 1px solid #bee5eb; }
        .warning { background: #fff3cd; color: #856404; border: 1px solid #ffeaa7; }
        .log { background: #f8f9fa; border: 1px solid #ddd; border-radius: 4px; padding: 10px; max-height: 300px; overflow-y: auto; font-family: monospace; font-size: 12px; }
        .log-entry { padding: 5px; border-bottom: 1px solid #eee; }
        .timestamp { color: #666; }
        textarea { font-family: monospace; }
        .hidden { display: none; }
    </style>
</head>
<body>
    <h1>AI Code Suggestion System</h1>

    <div id="loginSection" class="container">
        <h2>1. Login</h2>
        <input type="text" id="username" placeholder="Username" value="alice">
        <input type="password" id="password" placeholder="Password" value="password123">
        <button onclick="login()">Login</button>
        <div id="loginStatus"></div>
    </div>

    <div id="wsSection" class="container hidden">
        <h2>2. WebSocket Connection</h2>
        <input type="text" id="token" placeholder="Token (from login)" readonly>
        <button onclick="connect()" id="connectBtn">Connect</button>
        <button onclick="disconnect()" id="disconnectBtn" disabled>Disconnect</button>
        <div id="wsStatus"></div>
    </div>

    <div id="editorSection" class="container hidden">
        <h2>3. Code Suggestion</h2>
        <textarea id="code" rows="8" placeholder="Enter code...">function add(a, b) {
    return a + b;
}</textarea>
        <div class="button-group">
            <button onclick="getSuggestion()" id="suggestionBtn" disabled>Get Suggestion</button>
            <button onclick="cancel()" id="cancelBtn" disabled>Cancel Request</button>
        </div>
        <div class="container">
            <div class="split-panel" id="queueStatus"></div>
            <div class="split-panel" id="response"></div>
        </div>
    </div>

    <div class="container">
        <h2>4. Event Log</h2>
        <button onclick="clearLog()">Clear Log</button>
        <div id="log" class="log"></div>
    </div>

    <script>
        let socket = null;
        let token = null;
        let authenticated = false;
        const serverUrl = 'https://google-api-integration.onrender.com';

        async function login() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const status = document.getElementById('loginStatus');

            try {
                const res = await fetch(`${serverUrl}/api/login`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username, password })
                });
                const data = await res.json();

                if (data.success) {
                    token = data.token;
                    document.getElementById('token').value = token;
                    status.innerHTML = `<div class="status success">‚úì Login successful! User: ${data.user.username}</div>`;
                    log('SUCCESS', 'Login successful', data);
                    
                    // Show WebSocket and Editor sections
                    document.getElementById('wsSection').classList.remove('hidden');
                    document.getElementById('editorSection').classList.remove('hidden');
                } else {
                    status.innerHTML = `<div class="status error">‚úó ${data.message}</div>`;
                    log('ERROR', 'Login failed', data);
                }
            } catch (error) {
                status.innerHTML = `<div class="status error">‚úó Error: ${error.message}</div>`;
                log('ERROR', 'Login error', { error: error.message });
            }
        }

        function connect() {
            const t = document.getElementById('token').value;
            const status = document.getElementById('wsStatus');

            if (!t) {
                status.innerHTML = '<div class="status error">‚úó Please login first</div>';
                return;
            }

            socket = io(serverUrl);

            socket.on('connect', () => {
                status.innerHTML = '<div class="status info">‚è≥ Connected. Authenticating...</div>';
                log('INFO', 'Socket connected', { id: socket.id });
                socket.emit('authenticate', { token: t });
            });

            socket.on('authenticated', (data) => {
                authenticated = true;
                status.innerHTML = `<div class="status success">‚úì Authenticated! User ID: ${data.userId}</div>`;
                document.getElementById('connectBtn').disabled = true;
                document.getElementById('disconnectBtn').disabled = false;
                document.getElementById('suggestionBtn').disabled = false;
                log('SUCCESS', 'Authenticated', data);
            });

            socket.on('queued', (data) => {
                document.getElementById('queueStatus').innerHTML = 
                    `<div class="status warning">
                        <strong>‚è≥ Request Queued</strong><br>
                        Position: ${data.position}/${data.queueLength}<br>
                        Request ID: ${data.requestId}
                    </div>`;
                document.getElementById('cancelBtn').disabled = false;
                log('INFO', 'Request queued', data);
            });

            socket.on('queue-position-update', (data) => {
                document.getElementById('queueStatus').innerHTML = 
                    `<div class="status warning">
                        <strong>‚è≥ Queue Position</strong><br>
                        Position: ${data.position}/${data.queueLength}<br>
                        Estimated wait: ${data.estimatedWaitTime} seconds
                    </div>`;
                log('INFO', 'Queue position updated', data);
            });

            socket.on('processing-started', (data) => {
                document.getElementById('queueStatus').innerHTML = 
                    `<div class="status info">
                        <strong>üîÑ Processing</strong><br>
                        Your request is being processed...
                    </div>`;
                log('INFO', 'Processing started', data);
            });

            socket.on('suggestion-response', (data) => {
                document.getElementById('queueStatus').innerHTML = '';
                document.getElementById('cancelBtn').disabled = true;
                document.getElementById('response').innerHTML = 
                    `<div class="status success">
                        <strong>‚úì AI Suggestion</strong><br>
                        Processing time: ${data.processingTime}ms<br><br>
                        <pre style="white-space: pre-wrap; background: #f8f9fa; padding: 10px; border-radius: 4px; max-height: 400px; overflow-y: auto;">${data.suggestion}</pre>
                    </div>`;
                log('SUCCESS', 'Suggestion received', { time: data.processingTime });
            });

            socket.on('request-cancelled', (data) => {
                document.getElementById('queueStatus').innerHTML = 
                    `<div class="status info">
                        <strong>‚úì Request Cancelled</strong><br>
                        Your request has been removed from the queue.
                    </div>`;
                document.getElementById('cancelBtn').disabled = true;
                log('INFO', 'Request cancelled', data);
            });

            socket.on('error', (data) => {
                status.innerHTML = `<div class="status error">‚úó ${data.message}</div>`;
                log('ERROR', 'Error', data);
            });

            socket.on('disconnect', () => {
                authenticated = false;
                status.innerHTML = '<div class="status error">‚úó Disconnected</div>';
                document.getElementById('connectBtn').disabled = false;
                document.getElementById('disconnectBtn').disabled = true;
                document.getElementById('suggestionBtn').disabled = true;
                log('INFO', 'Disconnected', {});
            });

            socket.on('connect_error', (error) => {
                status.innerHTML = `<div class="status error">‚úó Connection error: ${error.message}</div>`;
                log('ERROR', 'Connection error', { error: error.message });
            });
        }

        function disconnect() {
            if (socket) socket.disconnect();
        }

        function getSuggestion() {
            const code = document.getElementById('code').value;
            if (!socket || !authenticated) {
                alert('Please connect and authenticate first!');
                return;
            }
            if (!code.trim()) {
                alert('Please enter some code!');
                return;
            }
            document.getElementById('response').innerHTML = '';
            socket.emit('get-suggestion', { code });
            log('INFO', 'Suggestion requested', { codeLength: code.length });
        }

        function cancel() {
            if (!socket || !authenticated) return;
            socket.emit('cancel-request');
            log('INFO', 'Cancel requested', {});
        }

        function log(type, msg, data) {
            const logDiv = document.getElementById('log');
            const time = new Date().toLocaleTimeString();
            const entry = document.createElement('div');
            entry.className = 'log-entry';
            entry.innerHTML = `<span class="timestamp">[${time}]</span> <strong>${type}:</strong> ${msg} ${Object.keys(data).length ? JSON.stringify(data) : ''}`;
            logDiv.appendChild(entry);
            logDiv.scrollTop = logDiv.scrollHeight;
        }

        function clearLog() {
            document.getElementById('log').innerHTML = '';
        }
    </script>
</body>

</html>
